<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0080ff"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:text="Choose your category:"
        android:textColor="#ffffff"
        android:textSize="25.0sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnFamily"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="60dp"
        android:background="@animator/redbutton"
        android:gravity="center"
        android:text="Family"
        android:textColor="@color/foreColor"
        android:textSize="25.0sp" />

    <Button
        android:id="@+id/btnFriends"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="15dp"
        android:background="@animator/greenbutton"
        android:gravity="center"
        android:text="Friends"
        android:textColor="@color/foreColor"
        android:textSize="25.0sp" />


    <Button
        android:id="@+id/btnSpecial"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="15dp"
        android:background="@animator/purplebutton"
        android:gravity="center"
        android:text="Special Ones"
        android:textColor="@color/foreColor"
        android:textSize="25.0sp" />
</LinearLayout>